      "sourceKey": "service"
    },
    {
      "keyName": "serviceTimeId",
      "displayName": "Service Time",
      "source": "dropdown",
      "sourceKey": "serviceTime"
    },
    {
      "keyName": "groupId",
      "displayName": "Group",
      "source": "dropdown",
      "sourceKey": "group"
    }
  ],
